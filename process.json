{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 350,
  "height": 350,
  "autosize": "none",
  "signals": [
    {
      "name": "startAngle",
      "value": 0,
      "bind": {"input": "range", "min": 0, "max": 6.29, "step": 0.01}
    },
    {
      "name": "endAngle",
      "value": 6.29,
      "bind": {"input": "range", "min": 0, "max": 6.29, "step": 0.01}
    },
    {
      "name": "padAngle",
      "value": 0,
      "bind": {"input": "range", "min": 0, "max": 0.1}
    },
    {
      "name": "innerRadius",
      "value": 0,
      "bind": {"input": "range", "min": 0, "max": 90, "step": 1}
    },
    {
      "name": "cornerRadius",
      "value": 0,
      "bind": {"input": "range", "min": 0, "max": 10, "step": 0.5}
    },
    {
      "name": "sort",
      "value": false,
      "bind": {"input": "checkbox"}
    }
  ],
  "data": [
    {
      "name": "partitions",
      "url": "sample_output_anon.json",
      "format":
      {
        "type": "json",
        "property": "PARTITIONS",
        "parse": { "_memory":"number" }
      },
      "transform": [
        {
          "type": "pie",
          "field": "_memory",
          "startAngle": {"signal": "startAngle"},
          "endAngle": {"signal": "endAngle"},
          "sort": {"signal": "sort"}
        }
      ]
    },
    {
      "name": "temp_vals",
      "values": {
        "t": {"id": 1, "field": 4},
        "h": {"id": 2, "field": 6},
        "i": {"id": 3, "field": 10},
        "n": {"id": 4, "field": 3},
        "g": {"id": 5, "field": 7},
        "s": {"id": 6, "field": 8}
      }
    },
    {
      "name": "temp_vis",
      "source": "temp_vals",
      "transform": [
        {
          "type": "pie",
          "field": "field",
          "startAngle": {"signal": "startAngle"},
          "endAngle": {"signal": "endAngle"},
          "sort": {"signal": "sort"}
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": {"scheme": "category20"}
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {"data": "partitions"},
      "encode": {
        "enter": {
          "fill": {"scale": "color", "field": "_memory"},
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 2"}
        },
        "update": {
          "startAngle": {"field": "startAngle"},
          "endAngle": {"field": "endAngle"},
          "padAngle": {"signal": "padAngle"},
          "innerRadius": {"signal": "innerRadius"},
          "outerRadius": {"signal": "width / 2"},
          "cornerRadius": {"signal": "cornerRadius"}
        }
      }
    }
  ]
}
